<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="12" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.atv4_cleiton.HelloController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Média Escolar"/>

    <HBox spacing="10">
        <Label text="Aluno:"/>
        <TextField fx:id="txtNome" promptText="Nome do aluno"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Nota 1:"/>
        <TextField fx:id="txtNota1" promptText="0 a 10"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Nota 2:"/>
        <TextField fx:id="txtNota2" promptText="0 a 10"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Nota 3:"/>
        <TextField fx:id="txtNota3" promptText="0 a 10"/>
    </HBox>

    <Button fx:id="btnCalcular" text="Calcular Média"/>

    <Label fx:id="lblResultado" text="Resultado aparecerá aqui." wrapText="true"/>
</VBox>
