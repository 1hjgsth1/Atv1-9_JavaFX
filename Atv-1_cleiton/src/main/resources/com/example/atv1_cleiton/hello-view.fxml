<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.example.atv1_cleiton.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Calculadora de Operações Básicas" />

    <HBox alignment="CENTER" spacing="10.0">
        <TextField fx:id="txtNumero1" promptText="Número 1" />
        <TextField fx:id="txtNumero2" promptText="Número 2" />
    </HBox>

    <HBox alignment="CENTER" spacing="10.0">
        <Button fx:id="btnSoma" text="+" />
        <Button fx:id="btnSubtracao" text="-" />
        <Button fx:id="btnMultiplicacao" text="×" />
        <Button fx:id="btnDivisao" text="÷" />
    </HBox>

    <Label fx:id="lblResultado" text="Resultado: " />
</VBox>
