<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.example.atv3_cleiton.HelloController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="Cadastro de Pessoa + Análise" />

    <!-- Nome -->
    <HBox alignment="CENTER" spacing="10">
        <Label text="Nome:" />
        <TextField fx:id="txtNome" promptText="Digite o nome" />
    </HBox>

    <!-- Idade -->
    <HBox alignment="CENTER" spacing="10">
        <Label text="Idade:" />
        <TextField fx:id="txtIdade" promptText="Digite a idade" />
    </HBox>

    <!-- Sexo -->
    <HBox alignment="CENTER" spacing="10">
        <Label text="Sexo:" />
        <RadioButton fx:id="rbMasculino" text="Masculino" />
        <RadioButton fx:id="rbFeminino" text="Feminino" />
    </HBox>

    <!-- Esportes -->
    <CheckBox fx:id="chkEsportes" text="Gosta de praticar esportes" />

    <!-- Botão -->
    <Button fx:id="btnAnalisar" text="Analisar" />

    <!-- Resultado -->
    <Label fx:id="lblResultado" text="Resultado aparecerá aqui." wrapText="true" />
</VBox>
