<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.atv8_cleiton.HelloController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Jogo de Adivinhação (1 a 10)"/>

    <HBox spacing="10">
        <TextField fx:id="txtNumero" promptText="Seu palpite" prefWidth="120"/>
        <Button fx:id="btnVerificar" text="Verificar"/>
    </HBox>

    <Button fx:id="btnNovo" text="Tentar novamente"/>

    <Label fx:id="lblResultado"
           text="Tente adivinhar o número!"
           wrapText="true"/>
</VBox>
